#include <iostream>
using namespace std;

double recursion(double x, double n)
{
    if (n == 1) return x / 1;
    return x / n + recursion(x, n - 2);
}
int main()
{
    double n, x;
    cout <<"Enter n:";
    cin >> n;
    cout << "Enter x: ";
    cin >> x;
    double y = recursion(x, 2 * n + 1);
    cout << "result: " << y;
    return 0;
}
