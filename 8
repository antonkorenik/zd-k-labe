#include <iostream>

using namespace std;

int main() {
    int i;
    float num, pow, result = 1, check;
    cout << "Enter number and power: " << endl;;
    cin >> num >> pow;
    if (pow < 0)
        check = pow * -1;
    else
        check = pow;
    result = num;
    for (i = 1;i < check ;i++)
        result = result * num;

    if (pow > 0)
        cout << result;
    else
        cout << 1 / result;
    return 0;
}
    
